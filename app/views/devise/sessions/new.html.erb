<div class="d-flex flex-column align-items-center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="text-center mb-4">
      <%= image_tag("white.jpg", alt:"logo", class: "img-fluid", style: "max-width: 100px;") %>
      <h2>Log in</h2>
    </div>
    <div class="form-group">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
    </div>
    <div class="form-group">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
      <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
    </div>
    <div class="form-group d-flex justify-content-center">
  <%= f.button :submit, "Login", class: "mybutton form-control", style: "background-color: #C58940; width: 400px; border: none;" %>
</div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
