<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="text-center mb-4">
    <%= image_tag("My_readings_claro.png", alt:"logo", class: "img-fluid", style: "max-width: 100px;") %>
    <h2>Log in</h2>
  </div>
  <div class="form-group">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
  </div>
  <div class="form-group">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "form-control", placeholder: "Password" } %>
    <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
  </div>

  <div class="form-group">
  <%= f.button :submit, "Login", class: "btn btn-primary form-control", style: "background-color: #C58940; border: none;" %>
  </div>


<% end %>
<%= render "devise/shared/links" %>
