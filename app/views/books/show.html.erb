<div class="d-flex justify-content-center">
  <div class="container d-flex">
    <%= image_tag @book.image_url, class: "img-fluid w-25", crop: :fill, style:"" %>
    <div class="row">
      <div class="p-3 d-flex flex-fill justify-content-between">
        <div class="mx-3">
          <h3><%= @book.title %></h3>
          <ul class="list-group" style="list-style-type: none;">
            <li><strong>Author:</strong> <%= @book.author %></li>
            <li><strong>Category:</strong> <%= JSON.parse(@book.categories)[0] %></li>
            <li><strong>Pages:</strong> <%= @book.page_count %></li>
            <li><strong>Published:</strong> <%= @book.published_date %></li>
          </ul>
        </div>
        <div class="d-flex align-items-start">
          <h3 class="text-lg-end ml-auto font-size-lg"><i class="fa-regular fa-star"></i><%= @book.average_rating %></h3>
          <p class="mt-2">/5</p>
        </div>
      </div>
      <div class="align-self-start ml-auto mx-3">
        <h4>Readers</h4>
      </div>
    </div>
  </div>
</div>

<div class="container mt-4 mx-4">
  <h2>Description</h2>
  <p><%= @book.description %></p>
</div>

<div class="container mt-4 mx-4">
  <h2>Reviews</h2>

  <% if @book.reviews.any? %>
    <% @book.reviews.each do |review| %>
      <div class="card mb-3">
        <div class="card-body">
          <p class="card-text"><%= review.content %></p>
          <p class="card-text"><small class="text-muted"><%= review.user_name %> - <%= review.created_at.strftime("%m/%d/%Y") %></small></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No reviews yet.</p>
  <% end %>

  <%= link_to "Add a Review", new_book_review_path(@book), class: "btn btn-primary" %>
</div>
